
<h1>カート一覧</h1>
	<div class="col-sm-4">
		<ul class="media-list">
		<% @cart.map {|f| f.item}.each do |item| %> 
			<% unless item.thumbnails.empty? %>
				<% item.thumbnails.each_with_index do |thumbnail,i| %>
					<li class="media"><%= image_tag thumbnail.image.url,class: 'thumbnail media-left' %></li>
				<% break if i==0 %>
				<% end %>
			<% else %>
				<li class="alt">画像が<br>ありません</li>
			<% end %>
			<div class="media-body">
				<li class="media-header"><%= item.name %></li>
				<li><%= item.cart.quantity %>個　カートにはいっています</li>
				<li><%= item.price*item.cart.quantity %>円</li>
				<li><%= item.description %></li>
				<li><%= link_to 'カートから出す', item_cart_path(item),method: :delete %></li>
			</div>
		<% end %>
		<li>合計<%= user_item_total_fee @user %>円</li>
		</ul>
	</div>
<h2>購入する</h2>
<div class='col-sm-4'>
<%= form_for(@personal, url: user_order_path(@user)) do |f| %>
		<div class="form-group">
		<%= f.collection_select :state, JpPrefecture::Prefecture.all, :name, :name %>
		<%= f.text_field :city, placeholder: '市区町村',class: 'form-control' %>
		<%= f.text_field :address, placeholder: '丁目、番地',class: 'form-control' %>
		<%= f.text_field :tel, placeholder: '電話番号',class: 'form-control' %>
		</div>
	<%= f.submit '購入' %>
<% end %>
</div>