<div class="devise">
<h2>ログイン</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.text_field :name,placeholder: 'ニックネーム',class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, placeholder: 'パスワード',class: 'form-control'%>
  </div>
  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
  会員登録がお済でない方はこちら
  <%= link_to '新規会員登録',  new_user_registration_path,class: "btn btn-primary"%>
<% end %>
</div>
