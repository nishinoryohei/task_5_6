<h1>出品</h1>

<%= form_for(@item) do |f| %>
<div>
	<%= f.text_field :name, placeholder: '商品名' %>
	<%= f.text_area :description, placeholder: '商品説明' %>
	<%= f.text_field :price, placeholder: '価格' %>
	<%= f.fields_for :thumbnails do |thumbnail| %>
		<%= thumbnail.file_field :image %>
	<% end %>
	<%= f.submit '出品' %>
</div>
<% end %>
