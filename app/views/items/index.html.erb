<div class='container'>
<h1 class="title">商品一覧</h1>
<div class="page-header">
<% if user_signed_in? %>
		<%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>|<%= link_to 'カートを確認する', cart_user_path(current_user) %>
	<% if current_user.exhibitor == true %>
		<%= link_to '出品',new_item_path %>|
		<%= link_to '出品した商品一覧', user_path(current_user) %>|
	<% end %>
<% else %>
	<%= link_to '新規会員登録', new_user_registration_path %>|
	<%= link_to 'ログイン', new_user_session_path %>|
<% end %>
<div class='navbar navbar-default'>
	<div class="collapse navbar-collapse" id="navbarEexample">
			<ul class="nav navbar-nav">
				<li class="active"> フランス</li>
				<li><a href="#">メニューＢ</a></li>
				<li><a href="#">メニューＣ</a></li>
			</ul>
		<div class="navbar-form navbar-right" role='search'>
			<div class="form-group">
		<%= form_tag(items_path,method:"get") do %>
			<%= select_tag 'price',options_for_select([1000, 2000,3000,4000] ),{ autofocus: 'true', class: 'form-control'} %>
			<%= submit_tag '検索' , class: 'btn btn-default'%>
			</div>
		</div>
		<% end %>
	</div>
</div>

</div>
<% @items.each do |item| %>
	<div class="col-sm-4" >
		<ul class="media-list">
		<% unless item.thumbnails.empty? %>
		<% item.thumbnails.each_with_index do |thumbnail,i| %>
			<li class="media"><%= image_tag thumbnail.image.url,class: 'thumbnail media-left' %></li>
			<% break if i== 0 %>
			<% end %>
		<% else %>
			<li class="alt">画像が<br>ありません</li>
		<% end %>
		<div class="media-body"> 
		<li class="media-heading"><%= link_to item.name, item_path(item),data: {"turbolinks" => false} %></li>
		<li><%= item.price %>円</li>
		<li><%= item.description %></li>
		<li><%= item.category.color %></li>
		<li><%= item.category.area_i18n %></li>
		<% if  stock_nil? item %>
			<li>売り切れ</li>
		<% else %>
			<li>在庫<%= item.backyard.stock %>個</li>
		<% end %>
		</div>
		</ul>
	</div>
<% end %>
<%= paginate @items %>
</div>
